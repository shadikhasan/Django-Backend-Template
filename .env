# =========================
# üîë Django Core Settings
# =========================

# Django Secret Key (keep this secret in production!)
SECRET_KEY=django-insecure-n7oy_o1yn!=izgniso1*%)1^#vtg49c0%h3lg%j-q$!b1t%x$

# Django Environment (options: dev, prod, test)
DJANGO_SETTINGS_MODULE=core.settings.dev

# Debug mode:
#   True  ‚Üí for development (shows detailed errors)
#   False ‚Üí for production (hides errors from users)
DEBUG=True

# Allowed hosts (comma-separated):
# Example: localhost,127.0.0.1,example.com
ALLOWED_HOSTS=localhost,127.0.0.1,example.com


# =========================
# üóÑ Database Configuration
# =========================

# Choose database engine:
#   sqlite   ‚Üí for local/simple projects
#   postgres ‚Üí for production / large projects
DB_ENGINE=sqlite

# PostgreSQL settings (only used if DB_ENGINE=postgres)
DB_HOST=postgres_service          # Hostname or container service name
DB_NAME=postgree_db               # Database name
DB_USER=postgres_user             # Username
DB_PASS=ss                        # Password
DB_PORT=5432                      # Port (default: 5432)


# =========================
# üìÇ Static & Media Files
# =========================

# Paths for production file handling (optional)
# STATIC_ROOT=/path/to/staticfiles
# MEDIA_ROOT=/path/to/mediafiles


# =========================
# üîê Security Settings
# =========================

# HSTS duration (in seconds). Forces HTTPS in browsers.
# Set to 0 in development.
SECURE_HSTS_SECONDS=3600

# Force redirect HTTP ‚Üí HTTPS (False in development)
SECURE_SSL_REDIRECT=False

# Use HTTPS-only cookies (False in development)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False


# =========================
# üåê CORS & CSRF Settings
# =========================

# CSRF trusted origins (comma-separated URLs)
CSRF_TRUSTED_ORIGINS=https://myfrontend.com,https://sub.myfrontend.com

# Allowed origins for CORS (comma-separated URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://myfrontend.com

# Allow all origins for CORS:
#   True  ‚Üí All origins allowed (not secure for production)
#   False ‚Üí Use CORS_ALLOWED_ORIGINS list
CORS_ALLOW_ALL_ORIGINS=False

# Allow sending cookies / Authorization headers with CORS requests
CORS_ALLOW_CREDENTIALS=True


